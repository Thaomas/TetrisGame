{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create out directory",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "if not exist \"out\" mkdir \"out\""
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "C/C++: g++ build active file",
      "type": "process",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": [
        "Create out directory"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}


